<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PracticaDSMGen.Infraestructure"
		                   namespace="PracticaDSMGen.Infraestructure.EN.PracticaDSM">
		    
		    
			
				<class name="TransaccionNH" table="Transaccion"> 
				  	
						<id name="Id" column="idTransaccion" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Fecha" type="date"> 
						<column name="fecha"  not-null="true"/>
					</property>
					<property name="Total" type="double"> 
						<column name="total"  not-null="true"/>
					</property>
					<property name="MetodoPago" type="string"> 
						<column name="metodoPago"  not-null="true"/>
					</property>
					<property name="TipoOperacion" > 
						<column name="tipoOperacion"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
		  			
					
							   <one-to-one name="Pedido" class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.PedidoNH" property-ref="Transaccion" />							
					 
						
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="TransaccionNHReadAllHQL">from TransaccionNH</query>
		</hibernate-mapping>
	