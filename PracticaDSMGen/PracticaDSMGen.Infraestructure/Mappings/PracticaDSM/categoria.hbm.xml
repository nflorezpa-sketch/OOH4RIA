<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PracticaDSMGen.Infraestructure"
		                   namespace="PracticaDSMGen.Infraestructure.EN.PracticaDSM">
		    
		    
			
				<class name="CategoriaNH" table="Categoria"> 
				  	
						<id name="Id" column="idCategoria" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Nombre" type="string"> 
						<column name="nombre"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
			
			
			
			
			
		  			
						<bag name="Videojuego" >
							<key>
							
								
								<column name="FK_idCategoria_idCategoria"/>
					      	</key>
							<one-to-many class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.VideojuegoNH"/>
					    </bag>
					
					
					
					
					
		
		 </class>	
		  
		  <query name="CategoriaNHReadAllHQL">from CategoriaNH</query>
		  <query name="CategoriaNHobtenerVideojuegoPorNombreHQL"><![CDATA[FROM VideojuegoEN AS v WHERE v.nombre LIKE CONCAT('%', :nombreVideojuego, '%')]]></query>
		</hibernate-mapping>
	